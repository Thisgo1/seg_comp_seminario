{
  "compilerOptions": {
    "target": "es2022", // Ou "esnext"
    "module": "NodeNext", // Essencial para ES Modules no Node.js
    "moduleResolution": "NodeNext", // Essencial para ES Modules no Node.js
    "esModuleInterop": true, // Permite importações padrão de módulos CommonJS
    "forceConsistentCasingInFileNames": true, // Garante consistência nos nomes de arquivos
    "strict": true, // Habilita todas as opções de verificação de tipo estritas
    "skipLibCheck": true, // Pula a verificação de tipo de arquivos de declaração (.d.ts)
    "outDir": "./dist", // Diretório de saída para arquivos JavaScript compilados
    "rootDir": "./src", // Diretório raiz para arquivos TypeScript de origem
    "sourceMap": true, // Gera arquivos .map para depuração
    "resolveJsonModule": true // Permite importar arquivos JSON
  },
  "include": ["src/**/*.ts"], // Inclui todos os arquivos .ts na pasta src
  "exclude": ["node_modules"] // Exclui a pasta node_modules da compilação
}
